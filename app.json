{
  "expo": {
    "name": "fudap-riders-app",
    "slug": "fudap-riders-app",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/fudap_logo.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/fudap_logo.png",
      "resizeMode": "contain",
      "backgroundColor": "#FD264F"
    },
    "updates": {
      "fallbackToCacheTimeout": 0
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.fudapridersapp",
      "googleServicesFile": "./GoogleService-Info.plist",
      "infoPlist": {
         "UIBackgroundModes": [
          "location",
           "fetch",
           "remote-notification"
         ],
         "NSLocationWhenInUseUsageDescription": "Fudap uses your location to pick origins, destinations, and predict ride times",
        "NSLocationAlwaysAndWhenInUseUsageDescription": "Fudap will use your location to provide ETA's to yourself and others",
        "NSLocationAlwaysUsageDescription": "text"
      }
    },
    "android": {
      "permissions":["ACCESS_COARSE_LOCATION","ACCESS_FINE_LOCATION","ACCESS_BACKGROUND_LOCATION"],
      "adaptiveIcon": {
        "foregroundImage": "./assets/fudap_logo.png",
        "backgroundColor": "#FD264F"
      },
      "package": "com.fudapridersapp",
      "googleServicesFile": "./google-services.json"
    },
    "web": {
      "favicon": "./assets/fudap_logo.png"
    },
    "extra": {
      "eas": {
        "projectId": "42b4d55e-00fe-41aa-ac86-8784ac1d3fdd"
      }
    },
    "plugins": [
      "@react-native-firebase/app"
    ]
  }
}
